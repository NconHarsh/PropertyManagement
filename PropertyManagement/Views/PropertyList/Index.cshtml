@using PropertyManagement.Models
@using Kendo.Mvc.UI
@model IEnumerable<tblprakrutiproperty>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Index</h2>
@(Html.Kendo().Grid(Model)
                .Name("grid")
                .Columns(columns =>
                {
                    columns.Bound(p => p.txtfloor);
                    columns.Bound(p => p.txtlocation).Width(120);
                    columns.Bound(p => p.txtNamingCon).Width(120);
                    columns.Bound(p => p.txttype).Width(120);
                    // columns.Command(command => { command.Edit(); command.Destroy(); }).Width(250);
                })
                //   .ToolBar(toolbar => toolbar.Create())
                //   .Editable(editable => editable.Mode(GridEditMode.PopUp))
                .Pageable(pageable => pageable
                .Input(true)
                .Numeric(false))
                .Sortable()
                .Scrollable()
                .Filterable()
                .HtmlAttributes(new { style = "height:980px;" })
               .DataSource(dataSource => dataSource
        .Ajax()
        .PageSize(20)
        .ServerOperation(false)
        )
)
<script type="text/javascript">
    function error_handler(e) {
        if (e.errors) {
            var message = "Errors:\n";
            $.each(e.errors, function (key, value) {
                if ('errors' in value) {
                    $.each(value.errors, function () {
                        message += this + "\n";
                    });
                }
            });
            alert(message);
        }
    }
</script>
